<% include ./partials/header.ejs %>
   <div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
     <div class="w-[25vw] bg-white px-20 py-10 rounded-[30px]">
       <h1 class="text-3xl mb-5 text-center font-semibold  text-color-zinc-700 tracking-tighter capitalize leading-none">Create New Account</h1>
        <form action="/register" method="post">
            <h1>Username</h1>
            <input class="border-2 rounded-md block w-full px-3 mt-2 py-2 " type="text" name="username" placeholder="username">
            <h1>Full Name</h1>
            <input class="border-2 rounded-md block w-full px-3 mt-2 py-2 " type="text" name="fullname" placeholder="full Name">
            <h1>Email address</h1>
            <input class="border-2 rounded-md block w-full px-3 mt-2 py-2 " type="text" name="email" placeholder="email">
            <h1>Password</h1>
            <input class="border-2 rounded-md block w-full px-3 mt-2 py-2 " type="password" name="password" placeholder="create a password">
            <h1>Phone No.</h1>
            <input class="border-2 rounded-md block w-full px-3 mt-2 py-2 " type="number" name="contact" placeholder="contact">
            <input class="border-2 rounded-full block w-full px-3 mt-5 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create Account">
            <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service and acknowledge that you've read our Privacy Policy. Notice at collection.</p>
        </form>
        <a class="inline-block mt-7 text-sm font-semiblod text-zinc-700 text-center w-full" href="/">Login Existing Account</a>
      </div>
   </div>

<% include ./partials/footer.ejs %>